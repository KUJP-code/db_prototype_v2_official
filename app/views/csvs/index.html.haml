- models = [%w[Activities TimeSlot], %w[Children Child],
            ['Regular Schedules', 'RegularSchedule'], %w[Bookings Invoice],
            %w[Users User], %w[Versions PaperTrail::Version]]

%main.w-100.d-grid#csvs_index
  .row.gap-5
    .card.col
      %h1 Import
      %p Faster, only if all records are new
      = form_with url: upload_csv_path,
                  html: { class: 'd-grid gap-3 p-5' } do |f|
        .fields
          = f.label :model, class: 'form-label'
          = f.select :model, models, {}, class: 'form-select'

        .field
          = f.label :csv, class: 'form-label'
          = f.file_field :csv, class: 'form-control', required: true

        = f.submit 'Import Records', class: 'btn btn-primary'

    .card.col
      %h1 Update
      %p Slower, only if records need to be updated
      = form_with url: update_csv_path,
                  html: { class: 'd-grid gap-3 p-5' } do |f|
        .fields
          = f.label :model, class: 'form-label'
          = f.select :model,
                     [%w[Children Child],
                      ['Regular Schedules', 'RegularSchedule'],
                      %w[Setsumeikais Setsumeikai]],
                     {},
                     class: 'form-select'

        .field
          = f.label :csv, class: 'form-label'
          = f.file_field :csv, class: 'form-control', required: true

        = f.submit 'Update Records', class: 'btn btn-primary'

    .card.col.justify-content-center.align-items-center
      = link_to 'Upload Assets', new_upload_path, class: 'btn btn-primary'

    .row.gap-5
      .card.d-grid.gap-3.p-5.col
        %h1= t('.export')
        - models.each do |model|
          - if model[0] == 'Bookings'
            %h2 Bookings
            = form_with url: download_csv_path,
                        method: :get,
                        local: true,
                        scope: nil,
                        data: { turbo: false },
                        class: "d-grid gap-3 w-100" do
              = hidden_field_tag :model, model[1]
              .field
                = label_tag :event, 'Event', class: 'form-label'
                = select_tag :event,
                            options_for_select(@events),
                            include_blank: 'Select event…',
                            required: true,
                            class: 'form-select'
              = submit_tag 'Download', class: 'btn btn-primary'

          - elsif model[0] == 'Versions'
            = link_to 'Versions (all, maybe memory issues)',
                      download_csv_path(model: model[1]),
                      class: 'btn btn-primary',
                      data: { turbolinks: false }

            = link_to 'Versions (last month, use me if possible)',
                      download_csv_path(model: model[1], from: 1.month.ago),
                      class: 'btn btn-primary',
                      data: { turbolinks: false }
          - else
            = link_to model[0],
                      download_csv_path(model: model[1]),
                      class: 'btn btn-primary',
                      data: { turbolinks: false }


      .card.col.justify-content-center.align-items-center
        %h1 Download signed-up parent emails
        .d-grid.gap-3.w-100.p-3
          - email_options = @events.map { |e| [e, download_emails_path(event: e)] }
          = select_tag :emails_event,
                      options_for_select(email_options),
                      include_blank: 'Select event…',
                      class: 'form-select select-gray',
                      id: 'emails_select'
          = button_tag 'Download',
                      class: 'btn btn-primary',
                      onclick: "var s=document.getElementById('emails_select'); if(s && s.value){ window.location = s.value; }"


      .card.col.justify-content-center.align-items-center
        %h1 Download no-photo parent emails
        .d-grid.gap-3.w-100.p-3
          - no_photo_options = @events.map { |e| [e, download_no_photo_emails_path(event: e)] }
          = select_tag :no_photo_event,
                      options_for_select(no_photo_options),
                      include_blank: 'Select event…',
                      class: 'form-select select-gray',
                      id: 'no_photo_select'
          = button_tag 'Download',
                      class: 'btn btn-primary',
                      onclick: "var s=document.getElementById('no_photo_select'); if(s && s.value){ window.location = s.value; }"
    .row.gap-5
      .card.col.justify-content-center.align-items-center
        %h1 Download Activities for an Event
        = form_with url: download_events_path,
                    method: :get,
                    local: true,
                    scope: nil,
                    data: { turbo: false },
                    class: "d-grid gap-3 w-100 p-3" do
          .field
            = label_tag :event, 'Event', class: 'form-label'
            = select_tag :event,
                        options_for_select(@events),
                        include_blank: 'Select event…',
                        required: true,
                        class: 'form-select'
          = submit_tag 'Download', class: 'btn btn-primary'


      .card.col.justify-content-center.align-items-center
        %h1 Download sign up csv
        .d-grid.gap-3.w-100.p-3
          - signups_options = @events.map { |e| [e, download_signups_path(event: e)] }
          = select_tag :signups_event,
                      options_for_select(signups_options),
                      include_blank: 'Select event…',
                      class: 'form-select select-gray',
                      id: 'signups_select'
          = button_tag 'Download',
                      class: 'btn btn-primary',
                      onclick: "var s=document.getElementById('signups_select'); if(s && s.value){ window.location = s.value; }"



      .card.col.justify-content-center.align-items-center
        %h3 Photo Kids
        .d-grid.gap-3.w-100.p-3
          - pk_options = @events.map { |e| [e, download_photo_kids_path(event: e)] }
          = select_tag :photo_kids_event,
                      options_for_select(pk_options),
                      include_blank: 'Select event…',
                      class: 'form-select select-gray',
                      id: 'photo_kids_select'
          = button_tag 'Download',
                      class: 'btn btn-primary',
                      onclick: "var s=document.getElementById('photo_kids_select'); if(s && s.value){ window.location = s.value; }"
