!!! 5
%html
  %head
    %title Kids UP申込フォーム
    %meta{ charset: 'utf-8' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1' }
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', 'data-turbo-track': 'reload'
    %script{ async: true, src: importmap_shim_src,
            'data-turbo-track': 'reload' }
    = javascript_importmap_tags
    = favicon_link_tag asset_path('favicon.svg')
    %meta{ property: 'og:image',
           content: "#{request.base_url}#{image_path('opengraph.svg')}" }
    %meta{ property: 'og:title', content: 'Kids UP申込フォーム' }
    %meta{ property: 'og:description', content: 'KidsUPイベント登録サイト' }
    %script
      (function(w,d,s,l,i){
      w[l]=w[l]||[];
      w[l].push({'gtm.start':new Date().getTime(),event:'gtm.js'});
      var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),
      dl=l!='dataLayer'?'&l='+l:'';
      j.async=true;j.src='https://www.googletagmanager.com/gtm.js?id='+i+dl;
      f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer','GTM-MGWSQLH');
    = yield :head
  %body
    %turbo_frame#flash
      = render 'shared/flash'
    = render 'nav/navbar' if user_signed_in?
    %noscript
      %iframe{ src: 'https://www.googletagmanager.com/ns.html?id=GTM-MGWSQLH',
               height: '0', width: '0', style: 'display:none;visibility:hidden' }
    = yield
